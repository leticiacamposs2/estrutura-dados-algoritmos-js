{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "no-console": "off",
        "quotes": "off",
        "semi": "off",
        "indent": "off",
        "linebreak-style": "off",
        "eqeqeq": "off",
        "curly": "off",
        "no-multi-spaces": "off",
        "no-trailing-spaces": "off",
        "no-inner-declarations": "off"
    },
    "overrides": [
        {
            "files": [
                "src/**/__tests__/**"
            ],
            "env": {
                "jest": true
            }
        }
    ]
}